<h1>日記編集</h1>
<%= form_with model:@diary, local:true do |f| %>
  <ul>
    <li><%= f.label :タイトル %></li>
    <li><%= f.text_field :title %></li>
  </ul>
  <ul>
    <li><%= f.label :ジャンル %></li>
    <li><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %></li>
  </ul>
  <ul>
    <li><%= f.label :URL %></li>
    <li><%= f.text_field :url %></li>
  </ul>
  <ul>
    <li><%= f.label :日記文 %></li>
    <li><%= f.text_field :sentence %></li>
  </ul>
  <%= f.submit "編集" %>
<% end %>
<%= link_to "戻る", diary_path(@diary) %>